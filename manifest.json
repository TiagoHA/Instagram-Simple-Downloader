{
    "manifest_version": 2,
    "name": "Instagram Simple Downloader",
    "version": "0.1",
    "description": "Add a simple button to download photos and videos from feed (Beta Version).",
    "icons": {
        "48": "icons/logo-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*"
            ],
            "js": [
                "app.js"
            ]
        }
    ],
    "permissions": [
        "downloads"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}